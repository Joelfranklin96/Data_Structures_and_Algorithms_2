   "source": [
    "# Write a recursive function that returns the sum of the digits of a given integer."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 21,
   "id": "ce6c7904",
   "metadata": {},
   "outputs": [],
   "source": [
    "def sum_of_digits(n):\n",
    "    \n",
    "    n = str(n)\n",
    "    \n",
    "    if len(n) == 1:\n",
    "        return int(n)\n",
    "    \n",
    "    return sum_of_digits(n[1:]) + int(n[0])"
   ]
  },

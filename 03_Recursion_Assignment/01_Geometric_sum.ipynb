   "source": [
    "# Given k, find the geometric sum of 1 + 1/2 + 1/4 + 1/8 + ...."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 9,
   "id": "132eaac9",
   "metadata": {},
   "outputs": [],
   "source": [
    "def geo_sum(k):\n",
    "    \n",
    "    if k == 1:\n",
    "        return 1\n",
    "    \n",
    "    if k == 0:\n",
    "        return 0\n",
    "    \n",
    "    return geo_sum(k-1) + (1/(2**(k-1)))"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 10,
   "id": "2a399db6",
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
